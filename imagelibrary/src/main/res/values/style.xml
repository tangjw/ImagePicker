<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeCropDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">#0000</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:windowAnimationStyle">@style/AnimationCropDialog</item>

    </style>

    <style name="AnimationCropDialog">
        <item name="android:windowEnterAnimation">@anim/crop_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/crop_dialog_exit</item>
    </style>

</resources>
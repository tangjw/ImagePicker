<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.tangjunwei.imagelibrary.widget.RatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        app:ratio_height="1"
        app:ratio_width="1">

        <ImageView
            android:id="@+id/image_view_image_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#484848"
            android:scaleType="centerCrop"/>

        <cn.tangjunwei.imagelibrary.widget.MyCheckableView
            android:id="@+id/cv_index"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|top"
            android:paddingStart="14dp"
            android:paddingLeft="14dp"
            android:paddingTop="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="14dp"
            app:color_checked="@color/colorImageChecked"/>

        <TextView
            android:id="@+id/tv_image_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:fontFamily="cursive"
            android:paddingStart="8dp"
            android:paddingBottom="4dp"
            android:text="GIF"
            android:textColor="#FFF"
            android:textSize="10dp"
            android:textStyle="bold"/>

    </cn.tangjunwei.imagelibrary.widget.RatioFrameLayout>
</FrameLayout>